<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SklepPapierniczy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SklepPapierniczy.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa; /* Optional: Background color for the body */
        }

        .sidebar {
            background-color: #6f42c1; /* Purple color */
            color: #ffffff; /* Text color for the sidebar */
            height: 100vh; /* Full height */
            position: fixed; /* Fixed position */
            top: 0;
            left: 0;
            width: 220px; /* Width of the sidebar */
            padding-top: 20px; /* Optional: Adjust top padding */
        }

            .sidebar h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

        .main-content {
            margin-left: 220px; /* Adjusted margin to account for sidebar width */
            padding: 20px; /* Optional: Add padding to the main content */
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                <div class="sidebar-sticky">
                    <h2 class="navbar-brand">Sklep Papierniczy</h2>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main role="main" class="col-md-10 ml-sm-auto main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
